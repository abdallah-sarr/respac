/* Nettoyage des doublons et réorganisation des styles */

/* Base styles */
:root {
  --section-padding-block: 4rem;
  --section-padding-inline: 1.5rem;
  --section-padding-inline-mobile: 1rem;
  --title-underline-width: 40%;
  --header-height: 88px;
  --contact-overlap: 12rem;
  --deep-green-1: #0b1f1a;
  --deep-green-2: #0e2a22;
  --dark-header-bg: #0b0b0b;
  --dark-header-color: #ffffff;
  --card-border-radius: 12px;
  --box-shadow-subtle: 0 4px 16px rgba(0, 0, 0, 0.1);
}

/* Boutons bordures avec animation remplissage */
.btn-border-fill {
  position: relative;
  overflow: hidden;
  border: 2px solid #daa520;
  color: #daa520;
  background: transparent;
  padding: 0.85rem 3rem;
  font-weight: 700;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  cursor: pointer;
  transition: color 0.3s ease;
  border-radius: 0;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  font-size: 1.1rem;
}
.btn-border-fill::before {
  content: "";
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  height: 0;
  background: #daa520;
  transition: all 0.3s ease;
  z-index: -1;
}
.btn-border-fill:hover {
  color: white;
}
.btn-border-fill:hover::before {
  top: 0;
  height: 100%;
}
.btn-border-fill:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(218, 165, 32, 0.6);
}

/* Overlay dégradé bas carte films */
.overlay-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.85), transparent);
  pointer-events: none;
  border-radius: 0 0 0.375rem 0.375rem;
}

/* Header transitions */
header {
  transition: all 0.4s ease;
  z-index: 100;
  will-change: transform;
  background: transparent;
  color: #111827;
  position: fixed;
  top: 0;
  width: 100%;
  border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
  height: var(--header-height, 72px);
}
header::before {
  content: "";
  position: absolute;
  inset: 0;
  background: #ffffff;
  transform: translateY(-100%);
  transition: transform 0.35s ease;
  z-index: -1;
}
header.hidden {
  transform: translateY(-100%);
}

/* Scrollbar styles for horizontal carousels */
.scrollbar-hide::-webkit-scrollbar {
  display: none;
}
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}
.carousel::-webkit-scrollbar {
  height: 8px;
}
.carousel::-webkit-scrollbar-track {
  background: transparent;
}
.carousel::-webkit-scrollbar-thumb {
  background: #daa520;
  border-radius: 10px;
}

/* Dark mode global */
.dark body {
  background-color: #121212;
  color: #e0e0e0;
}
.dark section {
  background-color: #121212 !important;
  color: #e0e0e0 !important;
}
.dark header {
  color: #ffffff !important;
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
}
.dark header .tab-link {
  color: rgba(255, 255, 255, 0.92);
}
.dark header .tab-link:hover {
  color: #ffffff;
}
.dark header .tab-active {
  color: #ffffff;
}
/* Dark mode avec header scrolled: conserver les liens blancs */
.dark header.header-scrolled .tab-link {
  color: rgba(255, 255, 255, 0.92) !important;
}
.dark header.header-scrolled .tab-active {
  color: #ffffff !important;
}
.dark header.header-scrolled .tab-link:hover {
  color: #ffffff !important;
}
.dark header .theme-toggle-square {
  border-color: rgba(255, 255, 255, 0.35) !important;
  background: rgba(255, 255, 255, 0.08) !important;
  color: #ffffff !important;
}
.dark .theme-toggle-square {
  border-color: rgba(255, 255, 255, 0.35) !important;
  background: rgba(255, 255, 255, 0.08) !important;
  color: #ffffff !important;
}
.dark .theme-toggle-square:hover {
  background: rgba(255, 255, 255, 0.15) !important;
  color: #ffffff !important;
}

.dark header::before {
  background: var(--dark-header-bg);
}
.dark header.header-scrolled::before {
  background: var(--dark-header-bg) !important;
}
.dark a {
  color: #daa520;
}
.dark a:hover {
  color: #ffcc33 !important;
}
.dark .btn-border-fill {
  border-color: #daa520;
  color: #daa520;
}
.dark .btn-border-fill:hover {
  color: white;
}
.dark .placeholder {
  background-color: #444 !important;
  color: #ddd !important;
}
.dark .sortie-film-card {
  background-color: #1e1e1e !important;
  color: #fff !important;
}

.dark h3 {
  color: #fff !important;
}
.dark .social-box {
  border-color: rgba(255, 255, 255, 0.1);
  background: #1e1e1e;
  color: #e0e0e0;
}
.dark .social-username {
  color: rgba(255, 255, 255, 0.5);
}
.dark article {
  background-color: #1e1e1e;
  border-color: rgba(255, 255, 255, 0.1);
}
.dark article p {
  color: rgba(255, 255, 255, 0.7);
}
.dark article time {
  color: rgba(255, 255, 255, 0.5);
}

