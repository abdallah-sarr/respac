/* Styles pour la section Partenaires */
.partners-section {
  text-align: center;
}

.partner-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2.5rem;
  max-width: 1200px;
  margin: 3rem auto;
  padding: 0 1rem;
}

@media (min-width: 768px) {
  .partner-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

.partner-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.partner-logo {
  width: 100%;
  max-width: 180px;
  height: 100px;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border: 2px solid #dee2e6;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
  position: relative;
  overflow: hidden;
}

.partner-logo::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60%;
  height: 60%;
  background: linear-gradient(45deg, #daa520, #ffd700);
  border-radius: 4px;
  opacity: 0.2;
}

.partner-logo::after {
  content: "LOGO";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 0.75rem;
  font-weight: 700;
  color: #6c757d;
  letter-spacing: 1px;
  z-index: 1;
}

.partner-card:hover .partner-logo {
  transform: translateY(-4px);
}

.partner-name {
  font-size: 1rem;
  font-weight: 600;
  color: #374151;
  text-align: center;
}

/* Mode sombre pour partenaires */
.dark .partner-logo {
  background: linear-gradient(135deg, #4b5563, #374151);
  border-color: rgba(255, 255, 255, 0.2);
}
.dark .partner-logo::after {
  color: #9ca3af;
}
.dark .partner-name {
  color: #d1d5db;
}

