/* Sorties films: largeur cartes réduite pour en avoir 6 visibles en desktop */
@media (min-width: 1024px) {
  .sortie-film-card {
    min-width: 240px;
    max-width: 240px;
    height: 360px;
  }
}
.sortie-film-card {
  min-width: 220px;
  max-width: 220px;
  height: 330px;
  position: relative;
  transition: all 0.3s ease;
  border-radius: 12px;
  overflow: hidden;
}

.sortie-film-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.sortie-film-card:hover img {
  transform: scale(1.05);
}

.film-info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 4rem 1rem 0.75rem;
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.95) 0%,
    rgba(0, 0, 0, 0.8) 30%,
    rgba(0, 0, 0, 0) 100%
  );
  display: block;
}
.film-info h3 {
  margin-bottom: 0px;
  line-height: 1;
  color: #fff;
}
.film-info time {
  display: block;
  margin: 0;
}

/* Header styles */
header {
  transition: all 0.4s ease;
  z-index: 100;
  will-change: transform;
  background: rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(12px) saturate(120%);
  -webkit-backdrop-filter: blur(12px) saturate(120%);
  color: #ffffff;
  position: fixed;
  top: 0;
  width: 100%;
  border-bottom: 1px solid rgba(255, 255, 255, 0.12);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.06),
    0 10px 24px rgba(0, 0, 0, 0.15);
  height: var(--header-height, 72px);
}

.header-content {
  max-width: 80rem; /* max-w-7xl */
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  align-items: center;
  justify-items: center;
  padding: 0 1.5rem; /* px-6 */
}

.header-logo {
  font-size: 1.5rem; /* text-2xl */
  font-weight: 800; /* font-extrabold */
  letter-spacing: 0.025em; /* tracking-wide */
  user-select: none;
  justify-self: start;
}

.header-logo a {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  height: var(--header-height);
}

.logo-img {
  border-radius: 0.125rem; /* rounded-sm */
}

.header-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500; /* font-medium */
  justify-self: center;
}

.header-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 0.75rem;
  justify-self: end;
}

/* Style unifié pour tous les CTA */
.cta-button {
  position: relative;
  overflow: hidden;
  border: 2px solid #e50914;
  color: #ffffff;
  background: #e50914;
  padding: 0.85rem 2.5rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  cursor: pointer;
  transition: all 0.3s ease;
  border-radius: 4px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  font-size: 1rem;
  min-height: 48px;
}
.cta-button::before {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 0%;
  background: #b20710;
  z-index: -1;
  transition: height 0.3s ease;
}
.cta-button:hover {
  color: #ffffff;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(229, 9, 20, 0.35);
}
.cta-button:hover::before {
  height: 100%;
}
.cta-button:active {
  transform: translateY(0);
}

